% \gfindent controls horizontal indentation
% \gfvskip  controls vertical   indentation
\newcommand{\gfindent}{0.5cm}
\newcommand{\gfvskip}{1cm}

\def\gfcommand#1#2{
   \newpage
   {\sc Name}\\
   \hspace*{\gfindent} {\bf #1} \hfill #2
}

\def\gfsyntax#1{
   \vskip \gfvskip
   {\sc Syntax}
%  \hspace*{\gfindent}
   \begin{quote}\tt #1\end{quote}
}

\long\def\gfdescription#1{
   \vskip \gfvskip
   {\sc Description}\\
   \hspace*{\gfindent} #1
}

\long\def\gfrecap#1{}

% the definition of gfexample is inspired by the definition of verb

\long\def\gfexample{
   \vskip \gfvskip
   {\sc Example}\\
   \begingroup \catcode``=13  \catcode`\^^M=13 \@noligs 
   \tt \let\do\@makeother \dospecials 
   \@ifstar{\@sgfexample}{\@gfexample}
}

\def\@sgfexample#1{\def\@tempa ##1#1{\leavevmode\null##1\endgroup}\@tempa}
\def\@gfexample{\@vobeyspaces \frenchspacing \@sgfexample}


\long\def\gfnotes#1{
   \vskip \gfvskip
   \ifx\@empty#1\else
      {\sc Notes}\\
      \hspace*{\gfindent}#1
   \fi
}

